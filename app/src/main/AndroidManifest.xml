<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pl.parfen.blockappstudyrelease">

    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
    </queries>
    <!-- 👇 ОБЯЗАТЕЛЬНО нужно добавить для отображения в Usage Access -->
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" tools:ignore="ProtectedPermissions" />

    <!-- Твои другие разрешения -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BlockAppStudyRelease"
        tools:targetApi="31">

        <!-- 👇 StartActivity - главный экран -->
        <activity
            android:name=".StartActivity"
            android:exported="true"
            android:theme="@style/Theme.BlockAppStudyRelease">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 👇 ВСЕ Activity должны быть exported=true для Android 12+ -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <activity
            android:name=".LanguageSelectionActivity"
            android:exported="true" />

        <activity
            android:name=".CreatePasswordActivity"
            android:exported="true" />

        <activity
            android:name=".PasswordLoginActivity"
            android:exported="true" />

        <activity
            android:name=".CheckQuestion"
            android:exported="true" />

        <activity
            android:name=".UserOptionsActivity"
            android:exported="true" />

        <activity
            android:name=".PasswordRecoveryActivity"
            android:exported="true" />
        <activity
            android:name=".ProfilesActivity"
            android:exported="true" />
        <activity
            android:name=".SettingsActivity"
            android:exported="true" />
        <activity
            android:name=".StatisticsActivity"
            android:exported="true" />
        <activity
            android:name=".CreateProfileActivity"
            android:exported="true" />
        <activity
            android:name=".SelectAppsActivity"
            android:exported="true" />
        <activity
            android:name=".BookPreviewActivity"
            android:exported="true" />
        <activity
            android:name=".SelectBookActivity"
            android:exported="true" />
        <activity
            android:name=".AIActivity"
            android:exported="true" />
        <activity
            android:name=".TopicSelectionActivity"
            android:exported="true" />


        <service
            android:name=".service.AppMonitoringService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
    </application>

</manifest>
